<%= form_for(@match) do |f| %>
  <% if @match.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@match.errors.count, "error") %> prohibited this match from being saved:</h2>

      <ul>
      <% @match.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="clearfix">
    <div class="field">
      <%= f.label :date %>
      <div class="input"><%= f.text_field :match_date %></div>
    </div>
  </div>

  <div class="clearfix">
    <div class="fieldset">
      <%= f.label :home_team_id %>
      <div class="input"><%= f.text_field :home_team_id %>  </div>
    </div>
  </div>
  
  <div class="clearfix">
    <div class="field">
      <%= f.label :away_team_id %>
      <div class="input"><%= f.text_field :away_team_id %>  </div>
    </div>
  </div>

  <div class="clearfix">
    <div class="field">
      <%= f.label :home_runs %>
      <div class="input"><%= f.text_field :home_runs %>    </div>
    </div>
  </div>

  <div class="clearfix">
    <div class="field">
      <%= f.label :away_runs %>
      <div class="input"><%= f.text_field :away_runs %>   </div>
    </div>
  </div>
  <div class="clearfix">
    <div class="field">
      <%= f.label :result, "Result (W/L/D/A/C) - leave blank for a guess" %>
      <div class="input"><%= f.text_field :result %></div> 
    </div>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
  
<% end %>
