<h1>Listing matches</h1>

<table>
  <tr>
    <th>Home team</th>
    <th>Away team</th>
    <th>Home score</th>
    <th>Away score</th>
    <th>Venue</th>
    <th>Result</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @matches.each do |match| %>
  <tr>
    <td><%= match.home_team_id %></td>
    <td><%= match.away_team_id %></td>
    <td><%= match.home_runs %></td>
    <td><%= match.away_runs %></td>
    <td><%= match.venue_id %></td>
    <td><%= match.result %></td>
    <td><%= link_to 'Show', match %></td>
    <td><%= link_to 'Edit', edit_match_path(match) %></td>
    <td><%= link_to 'Destroy', match, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

