<div class="container">
  <!-- Graphics section -->
  <div class="row">
    <!-- <div class="span16"> -->
      <div class="span12 ">
        <h2>Graph of glory</h2>
      </div>
      <div clas="span4">
        <%= link_to "Add new match result", new_match_path, :class => "btn success" %>
      </div>
    <!-- </div>  -->
    <div class="span16 well">
      <div class="span12">
        <div id="scores_chart" style="width: 600px; height: 250px"></div>
      </div>
      <div class="span 4">
        <h3>Summary results</h3>
          <table>
              <tr>
                <td>Won</td> 
                <td><span class="label success" style="font-size: 20px"><%= @summary[0] %></span></td>
              </tr>
              <tr>
                <td>Drawn</td>
                <td><span class="label warning" style="font-size: 20px"><%= @summary[1] %></span></td>
              </tr>
              <tr>
                <td>Lost</td>
                <td><span class="label important" style="font-size: 20px"><%= @summary[2] %></span></td>
              </tr>
          </table>
      </div>
    </div>
  </div>

  <!-- Listing all results -->
  <div class="row">
    <div class="span16">
      <h2 >View all intelligence</h2>

        <!-- TODO: Think this "container" div and all other bits could live in template - like application.html.erb -->
        
        
        <!-- TODO: Fairly sure there are better places for this script to live, but it works for now -->
        <script type="text/javascript" charset="utf-8">
          $(document).ready(function() 
              { 
                  $("#results").tablesorter(); 
              } 
          );
        </script>

        <table id="results" class="tablesorter zebra-striped">
          <thead>
            <tr>
              <th>Date</th>
              <th>Our team</th>
              <th>Opposition</th>
              <th>Our score</th>
              <th>Opposition score</th>
              <th>Venue</th>
              <th>Result</th>
            </tr>
          </thead>
          <tbody>
            <% @matches.each do |match| %>
            <tr>
              <td style="text-align:right"><%= link_to "#{match.match_date.strftime("#{match.match_date.day.ordinalize} %b '%y")}", edit_match_path(match) %> </td>
              <td><%= match.our_team.name %></td>
              <td><%= match.opposition.name %></td>
              <td><%= match.our_runs %></td>
              <td><%= match.opposition_runs %></td>
              <td><%= match.venue.name %></td>
              <td><span class='label <%= label_result(match.result) %>'><%= match.result %></span></td>
            </tr>
            <% end %>
          </tbody>
        </table>

        <%= link_to 'Add new match result', new_match_path, :class => "btn success" %>
        
      </div>
    </div>
  </div>
   
</div>  