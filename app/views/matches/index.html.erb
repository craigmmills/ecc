<div class="container">
  <div class="row">
    <div class="span16 columns">
      <div class="well">
        <h2>Graphs</h2>
          <div id="chart_this" style="width: 600px; height: 400px"></div>
          </div>
      </div>
    </div>
    <div class="span16 columns">
      <div class="well">
      <h2 >View all intelligence</h2>

        <!-- TODO: Think this "container" div and all other bits could live in template - like application.html.erb -->

        <table>
          <tr>
            <th>Home team</th>
            <th>Away team</th>
            <th>Home score</th>
            <th>Away score</th>
            <th>Venue</th>
            <th>Result</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>

        <% @matches.each do |match| %>
          <tr>
            <td><%= match.home_team_id %></td>
            <td><%= match.away_team_id %></td>
            <td><%= match.home_runs %></td>
            <td><%= match.away_runs %></td>
            <td><%= match.venue_id %></td>
            <td><%= match.result %></td>
            <td><%= link_to 'Show', match %></td>
            <td><%= link_to 'Edit', edit_match_path(match) %></td>
            <td><%= link_to 'Destroy', match, confirm: 'Are you sure?', method: :delete %></td>
          </tr>
        <% end %>
        </table>

        <br />

        <%= link_to 'New Match', new_match_path %>
        
      </div>
    </div>
  </div> 
</div>  