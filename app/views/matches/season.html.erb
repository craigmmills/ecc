<div class="container">
  <div class="row">
    <div class="span16">
      <h2>This is what the season looks like on <%= Date.today %></h2> <!-- TODO  Does the Date need to be lambda? -->
    </div>
  </div>
  <div class="row">
    <div class="span12">
      <% @results.each do |result|%>
        <%= render :partial => 'result', :locals => {:local_result => result} %>
      <% end %>         
    </div> 
    <div class="span4">
      <h2><%= @year %> season summary</h2>
      <table>
          <tr>
            <td>Won</td> 
            <td><span class="label success" style="font-size: 20px"><%= @summary[0] %></span></td>
          </tr>
          <tr>
            <td>Drawn</td>
            <td><span class="label warning" style="font-size: 20px"><%= @summary[1] %></span></td>
          </tr>
          <tr>
            <td>Lost</td>
            <td><span class="label important" style="font-size: 20px"><%= @summary[2] %></span></td>
          </tr>
      </table>
    </div>
  </div>
</div>