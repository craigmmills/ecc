						<%= f.text_field :title, :class => "xxlarge" %>
					</div>
				</div>
			</div>
			<div class="clearfix">
				<div class="field">
					<%= f.label :description %>
					<div class="input">
						<%= f.text_area :description, :class => "xxlarge" %>
					</div>
				</div>
			</div>
		</fieldset>
	</div>
	<div class="row">
		<div class="actions">
			<%= f.submit %>
		</div>
	</div><% end %>

