
	<%= form_for(@news) do |f| %><% if @news.errors.any? %>
	<div id="error_explanation">
		<h2>
			<%= pluralize(@news.errors.count, "error") %> prohibited this news from being saved:
		</h2>
		<ul>
			<% @news.errors.full_messages.each do |msg| %>
			<li>
				<%= msg %>
			</li><% end %>
		</ul>
	</div><% end %>
	<div class="row">
		<fieldset>
			<div class="clearfix">
				<div class="field">
					<%= f.label :title, :class => "xlarge" %>
